================== FIM TELA PRINCIPAL ================================


TELA PACIENTES ( ONDE IRÁ FAZER O CRUD )


package br.com.aps.telas;

import br.com.aps.conec.Conect;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import javax.swing.JOptionPane;


public class TelaPacientes extends javax.swing.JFrame {

    Connection conexao = null;
    PreparedStatement pst = null;
    ResultSet rs = null;
    public TelaPacientes() {
        initComponents();
        conexao = Conect.conector();
    }
    private void pesquisar() {
        String sql = "select * from PACIENTE where IDPACIENTE=?";

        try {
            pst = conexao.prepareStatement(sql);
            pst.setString(1, txtPacId.getText());
            rs = pst.executeQuery();
            if (rs.next()) {
                txtPacNome.setText(rs.getString(2));
                txtPacSexo.setSelectedItem(rs.getString(3));
                // A linha abaixo se refere ao combobox
                btnPacStatu.setSelectedItem(rs.getString(4));
                txtPacCpf.setText(rs.getString(5));
                cboPacCidade.setSelectedItem(rs.getString(6));
                txtPacData.setText(rs.getString(7));

            } else {
                JOptionPane.showMessageDialog(null, "Usuário não Cadastrado");
                // As linhas abaixo "limpam" os campos
                txtPacNome.setText(null);               
                txtPacCpf.setText(null);
                txtPacData.setText(null);

            }
        } catch (Exception e) {
            JOptionPane.showMessageDialog(null, e);
        }
    }

    private void adicionar() {
        String sql = "insert into paciente(IDPACIENTE,NOME,SEXO,STATU,CPF,CIDADE, DATAS) values(?,?,?,?,?,?,?)";
        try {
            pst = conexao.prepareStatement(sql);
            pst.setString(1, txtPacId.getText());
            pst.setString(2, txtPacNome.getText());
            pst.setString(3, txtPacSexo.getSelectedItem().toString());
            pst.setString(4, btnPacStatu.getSelectedItem().toString());
            pst.setString(5, txtPacCpf.getText());
            pst.setString(6,cboPacCidade.getSelectedItem().toString());
            pst.setString(7, txtPacData.getText());
            // Validação dos campos obrigatórios
            if ((txtPacId.getText().isEmpty())||(txtPacNome.getText().isEmpty())||(txtPacCpf.getText().isEmpty())||(txtPacData.getText().isEmpty())) {               
                JOptionPane.showMessageDialog(null, "Preencha todos os campos obrigatórios ");
            } else {

                // A liha abaixo atualiza a tabela paciente com os dados do formulário
                // a estrutura abaixo e usada para confirmar a inserção dos dados na tabela
                int adicionado = pst.executeUpdate();
                //a linha abaixo serve de apoio ao entendimento da lógica
                // System.out.println("adicionado");
                if (adicionado > 0) {
                    JOptionPane.showMessageDialog(null, "Usuário adicionado com sucesso");
                    txtPacId.setText(null);
                    txtPacNome.setText(null);            
                    txtPacCpf.setText(null);
                    cboPacCidade.setSelectedItem(null);
                    txtPacData.setText(null);
                }
            }
        } catch (Exception e) {
            JOptionPane.showMessageDialog(null, e);
        }
    }

    private void alterar(){
        String sql="update PACIENTE set NOME=?,SEXO=?,STATU=?,CPF=?,CIDADE=?,DATAS=? where IDPACIENTE=?";
        try {
            pst=conexao.prepareStatement(sql);
            pst.setString(1,txtPacNome.getText());
            pst.setString(2,txtPacSexo.getSelectedItem().toString());
            pst.setString(3, btnPacStatu.getSelectedItem().toString());
            pst.setString(4, txtPacCpf.getText());
            pst.setString(5, cboPacCidade.getSelectedItem().toString());
            pst.setString(6, txtPacData.getText());
            pst.setString(7,txtPacId.getText());
            if ((txtPacId.getText().isEmpty())||(txtPacNome.getText().isEmpty())||(txtPacCpf.getText().isEmpty())||(txtPacData.getText().isEmpty())) {               
                JOptionPane.showMessageDialog(null, "Preencha todos os campos obrigatórios ");
            } else {

                // A liha abaixo atualiza a tabela paciente com os dados do formulário
                // a estrutura abaixo e usada para confirmar a Alteração dos dados na tabela
                int adicionado = pst.executeUpdate();
                //a linha abaixo serve de apoio ao entendimento da lógica
                // System.out.println("adicionado");
                if (adicionado > 0) {
                    JOptionPane.showMessageDialog(null, "Dados do Usuário alterados com sucesso");
                    txtPacId.setText(null);
                    txtPacNome.setText(null);            
                    txtPacCpf.setText(null);
                    txtPacData.setText(null);
                }
            }
        } catch (Exception e) {
            JOptionPane.showMessageDialog(null, e);
        }
    }
    
    private void remover(){
        //A estrutura abaixo confirma a remoção do usuário
        int confirma =JOptionPane.showConfirmDialog(null,"Tem certeza que deseja remover esse usuário","Atenção",JOptionPane.YES_NO_OPTION);
        if (confirma==JOptionPane.YES_OPTION){
        String sql="delete from PACIENTE where IDPACIENTE=?";   
        try {
            pst=conexao.prepareStatement(sql);
            pst.setString(1,txtPacId.getText());
            int apagado = pst.executeUpdate();
            if(apagado>0)
                JOptionPane.showMessageDialog(null,"Usuário Removido com sucesso");
                    txtPacId.setText(null);
                    txtPacNome.setText(null);            
                    txtPacCpf.setText(null);
                    txtPacData.setText(null);
        } catch (Exception e) {
            JOptionPane.showMessageDialog(null, e);
        }
        }
    }

